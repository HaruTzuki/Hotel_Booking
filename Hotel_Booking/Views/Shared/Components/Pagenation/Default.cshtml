@model int

@{
    int Mod = Model % 5; // 5 is the per page hotel
    int Pages = 1;

    if (Mod != 0)
    {
        Pages = (Model / 5) + 1;
    }
    else
    {
        Pages = Model / 5;
    }

}

<nav>
    <ul class="pagination pagination-lg justify-content-center">
        @for (int i = 0; i < Pages; i++)
                    {
                        <li class="page-item"><a class="page-link" href="?page=@(i+1)">@(i + 1)</a></li>
                    }
    </ul>
</nav>
